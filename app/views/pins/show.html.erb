<div class="row text-center">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading center">
        <p><strong><%= link_to @pin.celebrity.name, celebrity_path(@pin.celebrity) %></strong></p>
        <%= image_tag @pin.image.url(:medium) %>
      </div>
      <div class="panel-body">
        <p><%= @pin.description %></p>
        <p><strong><%= @pin.user.username if @pin.user %></strong></p>
        <% if current_user && @pin.user == current_user %>
          <div class="actions">
            <%= link_to edit_pin_path(@pin) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
            <% end %>
            <%= link_to @pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
          </div>
        <% end %>
        <div class="row">
          <div class="text-center">
            <%= link_to 'All Pins', pins_path, class: "btn btn-info" %>
            <%= link_to "Add Clothes", new_pin_post_path(@pin), class: "btn btn-info" %>
            <%= link_to "See Clothes", pin_posts_path(@pin), class: "btn btn-info" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

