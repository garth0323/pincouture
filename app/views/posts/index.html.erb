<div id="pins" class="transitions-enabled">

  <% @posts.each do |post| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(post.image.url(:medium)), post.link %>
      <div class="panel-body">
        <%= post.user.username %>
        <strong><%= link_to post.host, post.link %></strong>
        <%= post.title %>
      </div>
    </div>
  <% end %>
</div>