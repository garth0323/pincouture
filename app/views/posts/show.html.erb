<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag(@post.image.url(:medium)) %>
      <div class="caption">
        <h3><%= @post.title %> </h3>
        <p><%= @post.description %></p>
        <p>reccommended by: <strong><%= @post.user.username %></strong></p>
        <p>
          <%= link_to 'Buy Now', @post.link, class: "btn btn-info" %> 
          <%= link_to image_tag("hang-it.png", size: "180x25", alt: "hang it"), root_path %> 
        </p>
      </div>
    </div>
  </div>
</div>
