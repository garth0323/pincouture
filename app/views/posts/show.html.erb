<div class="text-center">
  <h1>Hang it or Buy it!</h1>
  <p>
    <%= link_to 'Buy Now', @post.link, class: "btn btn-info" %> 
    <%= link_to image_tag("hang-it.png", size: "40x25", alt: "hang it"), hang_pin_post_path %> 
  </p>
</div>

<div class="row center-block">
  <div class="col-sm-6 col-md-4 col-md-offset-4">
    <div class="thumbnail">
      <%= image_tag(@post.image.url(:medium)) %>
      <div class="caption">
        <h3><%= @post.title %> </h3>
        <p><%= @post.description %></p>
        <p>reccommended by: <strong><%= @post.user.username %></strong></p>
      </div>
    </div>
  </div>
</div>


        